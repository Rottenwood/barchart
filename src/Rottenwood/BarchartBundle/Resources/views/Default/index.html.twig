{% extends 'RottenwoodBarchartBundle:Default:layout.html.twig' %}

{% block content %}

    <ul>
        {% for trade in trades %}
            <li>
                {{ loop.index }}.
                {% if trade.direction == constant('DIRECTION_BUY', trade) %}
                    {% set direction = 'продажа' %}
                    {% set profit = trade.close - trade.open %}
                {% else %}
                    {% set direction = 'покупка' %}
                    {% set profit = trade.open - trade.close %}
                {% endif %}
                <strong>{{ direction }}</strong>
                Time: {{ trade.openDate.format('Y-m-d') }}, Open: {{ trade.open }}, Close: {{ trade.close }}, Saldo {{ profit }}
            </li>
        {% endfor %}
    </ul>

{% endblock content %}
