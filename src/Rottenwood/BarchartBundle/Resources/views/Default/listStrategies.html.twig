{% extends ':Default:layout.html.twig' %}

{% block title %}Список стратегий{% endblock title %}

{% block content %}

    <p>Список ваших торговых стратегий:</p>

    <table id="trades-list">
        <thead>
        <tr>
            <td>#</td>
            <td>Название стратегии</td>
            <td></td>
            <td></td>
        </tr>
        </thead>

        <tbody>
        {% for strategy in strategies %}
            <tr>
                <td>{{ strategy.id }}</td>
                <td>
                    {{ strategy.name }}
                </td>
                <td>
                    <a href="{{ path('strategy.edit', {id: strategy.id}) }}">
                        редактировать
                    </a>
                </td>
                <td>
                    <a href="{{ path('strategy.test', {id: strategy.id}) }}">
                        протестировать
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock content %}
